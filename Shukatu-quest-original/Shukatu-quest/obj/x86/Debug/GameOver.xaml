            <Image x:ConnectionId='3' x:Name="shuukatusei" Source="gameover01.png" Margin="13,349,0,0" Height="378" VerticalAlignment="Top" HorizontalAlignment="Left" Width="507" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <CompositeTransform ScaleX="-1"/>
                </Image.RenderTransform>
            </Image>
            <TextBlock x:ConnectionId='4' x:Name="textBlock" Height="208" TextWrapping="Wrap" Text="GAMEOVER" VerticalAlignment="Top" FontSize="96" Foreground="#FFF90606" HorizontalAlignment="Center" Margin="75,56,73,0"/>
